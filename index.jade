extends ./layout.jade

mixin en(text)
	span.text-en(lang='en')= text

mixin ja(text)
	span.text-ja(lang='ja')= text

block head
	title Color of Anime
	link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:300,700,900')
	link(rel='stylesheet', href='css/style.css')
	script(src='js/vendor/color-convert-0.5.1.min.js')
	script(src='//code.createjs.com/preloadjs-0.4.1.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/camanjs/4.1.2/caman.full.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/tinycolor/1.1.1/tinycolor.min.js')

block body
	h1 Color of Anime
	#container
		#image-panel.panel
			#rendering 
				= ' '
				+en('Rendering...')
				+ja('レンダリング中…')
			#image-field
				#image.invisible
					canvas#canvas(width='400', height='400')
			#image-info
				+en('Sharo Kirima(Is The Order a Rabbit?)')
				+ja('桐間紗路(ご注文はうさぎですか?)')
				= ' - '
				a(href='http://www.gochiusa.com/news/hp0001/index00040000.html', target='_blank') Color Source
		#color-panel.panel
			#color-field
				ul#color-tabs.tabs
					li.tab.selected
						.tab-inner RGB
					li.tab
						.tab-inner HSV
					li.tab
						.tab-inner Lab
				#panel
					#color-sliders
						- var colorsets = [['R', 'G', 'B'], ['H', 'S', 'V'], ['L', 'a', 'b']];
						each colorset in colorsets
							- var name = colorset.join('');
							.colorset-sliders(id='colorset-sliders-'+name, data-colorset=name)
								each parameter in colorset
									.color-parameter-wrap(id=name+'-'+parameter, data-parameter=parameter)
										label.color-parameter-label(id=name+'-'+parameter+'-label')= parameter
										.color-parameter(id=name+'-'+parameter+'-parameter', data-colorset=name, data-parameter=parameter)
											.color-slider-wrapper
												.color-slider-pinch
										.color-value 0
						.color-infos
							.color-preview
								.color-preview-square
								.color-preview-value #000000
							.submit-wrapper
								#color-name black
								button.submit OK
					#result-field
						#score-field
							#score-text
								#score-label Score
								#score-numeral 0
							#score-bar
								#score-bar-inner
						#result-color
							#result-color-labels
								#your-color-label.result-color-label
									+en('Your Color')
									+ja('あなたの回答')
								#original-color-label.result-color-label
									+en('Original Color')
									+ja('正しい色')
							#result-color-previews
								#your-color-preview.result-color-preview
								#original-color-preview.result-color-preview
							#result-color-infos
								#your-color-info.result-color-info
									.result-color-value #000000
									.result-color-name black
								#original-color-info.result-color-info
									.result-color-value #ffffff
									.result-color-name white
						button.submit OK
