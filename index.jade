extends ./layout.jade

block head
	title Animecolor Test
	link(rel='stylesheet', href='css/style.css')
	link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:300,700,900')
	script(src='js/vendor/color-convert-0.5.1.min.js')
	script(src='//code.createjs.com/preloadjs-0.4.1.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/camanjs/4.1.2/caman.full.min.js')

block body
	h1 Animecolors Test
	#container
		#image-panel.panel
			#image-field.invisible
				canvas#canvas(width='400', height='400')
		#color-panel.panel
			#color-field
				ul#color-tabs.tabs
					li.tab
						.tab-inner RGB
					li.tab
						.tab-inner HSV
					li.tab
						.tab-inner Lab
				#color-sliders
					.color-slider#RGB-slider
						each parameter in ['R', 'G', 'B']
							.color-parameter-wrap
								label(for='RGB-'+parameter+'-parameter')= parameter
								.color-parameter(id='RGB-'+parameter+'-parameter')
								.color-value 255
