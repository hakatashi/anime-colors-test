extends ./layout.jade

block head
	title Color of Anime
	link(rel='stylesheet', href='css/style.css')
	link(rel='stylesheet', href='//fonts.googleapis.com/css?family=Lato:300,700,900')
	script(src='js/vendor/color-convert-0.5.1.min.js')
	script(src='//code.createjs.com/preloadjs-0.4.1.min.js')
	script(src='//cdnjs.cloudflare.com/ajax/libs/camanjs/4.1.2/caman.full.min.js')

block body
	h1 Color of Anime
	#container
		#image-panel.panel
			#image-field
				#image.invisible
					canvas#canvas(width='400', height='400')
				#rendering.invisible
					#rendering-inner Rendering...
		#color-panel.panel
			#color-field
				ul#color-tabs.tabs
					li.tab
						.tab-inner RGB
					li.tab
						.tab-inner HSV
					li.tab
						.tab-inner Lab
				#color-sliders
					.color-slider#RGB-slider(data-colorset='RGB')
						each parameter in ['R', 'G', 'B']
							.color-parameter-wrap(id='RGB-'+parameter, data-parameter=parameter)
								label.color-parameter-label(for='RGB-'+parameter+'-parameter', id='RGB-'+parameter+'-label')= parameter
								.color-parameter(id='RGB-'+parameter+'-parameter', data-parameter=parameter)
									.color-slider-wrapper
										.color-slider-pinch
								.color-value 0
					.color-infos.clearfix
						.color-preview
							.color-preview-square
							.color-preview-value #000000
						.submit-wrapper
							.something
							button.submit OK
